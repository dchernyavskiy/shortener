@{
    ViewBag.Title = "About";
    Layout = null;
    var about = "Description";
}

<h2>About View</h2>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <form method="post">
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea class="form-control" id="description" name="Description" rows="4">@about</textarea>
        </div>
        <button type="submit" class="btn btn-primary">@about</button>
    </form>
}
else
{
    <p>Description</p>
}